<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!--    Login Sytem-->

    <style name="textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#0000ff</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="textview1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="usernamebox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_top</item>
        <item name="android:hint">Username</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="passwordbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_bottom</item>
        <item name="android:hint">Password</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="loginButton">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:text">Sign In</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#FE5295</item>
        <item name="android:textSize">17sp</item>
    </style>


</resources>
